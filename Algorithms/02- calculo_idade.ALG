Algoritmo "semnome"

Var
   nome : caractere
   idadeini, idadef : inteiro

Inicio
   escreval ("Olá usuário, qual seu nome? ")
   leia (nome)

   escreval ("Agora diga sua idade. ")
   leia (idadeini)

   idadef <- idadeini+10

   escreval ("Olá, ", nome,". Sua idade daqui a 10 anos será de ", idadef)
Fimalgoritmo