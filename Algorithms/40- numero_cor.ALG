Algoritmo "semnome"

Var
   cor : inteiro

Inicio
   escreval ("Escolha um número de 1 a 5: ")
   leia (cor)
   
   escolha cor
   
caso 1
   escreval ("Vermelho")
caso 2
   escreval ("Verde")
caso 3
   escreval ("Azul")
caso 4
   escreval ("Roxo")
caso 5
   escreval ("Amarelo")

outrocaso
   escreval ("Número inválido")

fimescolha


Fimalgoritmo